<Application x:Class="TrayChrome.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <!-- 托盘图标定义 -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="Resources/Ampeross-Ampola-Chrome.ico"
                        TrayLeftMouseUp="TrayIcon_TrayLeftMouseUp">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="增加实例" Click="AddInstance_Click" />
                    <Separator />
                    <MenuItem Header="关闭实例" Click="CloseInstance_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>