<Window x:Class="TrayChrome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Tray Chrome"
        Height="640"
        Width="360"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- 自定义按钮样式 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666"/>
                                <Setter Property="Foreground" Value="#DDD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- 外层容器，用于创建阴影效果 -->
    <Border Background="#2D2D30" CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="0.6" BlurRadius="15"/>
        </Border.Effect>
        
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部地址栏 -->
        <Border Grid.Row="0" Background="#3C3C3C" BorderBrush="#555" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                

                
                <!-- 地址栏 -->
                <TextBox Grid.Column="0" Name="AddressBar" 
                         Background="#444" Foreground="#FFFFFF" 
                         BorderThickness="0" BorderBrush="#888"
                         Margin="0,3,5,3" Padding="8,5" 
                         Text="https://www.google.com"
                         KeyDown="AddressBar_KeyDown"
                         FontSize="10"
                         FontWeight="Normal"
                         VerticalContentAlignment="Center"/>

                <!-- 关闭按钮 -->
                <Button Grid.Column="1" Name="CloseButton" Content="×" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="CloseButton_Click"/>
            </Grid>
        </Border>
        
        <!-- WebView2 浏览器控件 -->
        <wv2:WebView2 Grid.Row="1" Name="webView" Source="https://www.google.com"/>
        
        <!-- 底部功能按钮栏 -->
        <Border Grid.Row="2" Background="#3C3C3C" BorderBrush="#555" BorderThickness="0,1,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                
                <!-- 后退按钮 -->
                <Button Grid.Column="0" Name="BackButton" Content="‹" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="BackButton_Click"/>
                
                <!-- 前进按钮 -->
                <Button Grid.Column="1" Name="ForwardButton" Content="›" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="ForwardButton_Click"/>
                
                <!-- 刷新按钮 -->
                <Button Grid.Column="2" Name="RefreshButton" Content="⟳" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="RefreshButton_Click"/>
                
                <!-- 收藏夹按钮 -->
                <Button Grid.Column="3" Name="BookmarkButton" Content="★" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="BookmarkButton_Click"
                        ToolTip="收藏夹">
                    <Button.ContextMenu>
                        <ContextMenu Name="BookmarkContextMenu">
                            <MenuItem Header="添加到收藏夹" Click="AddBookmark_Click"/>
                            <MenuItem Header="open bookmark.json" Click="EditBookmarkJson_Click"/>
                            <Separator/>
                            <!-- 收藏夹项目将在这里动态添加 -->
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                
                <!-- UA切换按钮 -->
                <Button Grid.Column="6" Name="UAButton" Content="▯" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="UAButton_Click"
                        ToolTip="切换用户代理 (当前: 手机)"/>
                                <!-- Popup按钮 -->
                <Button Grid.Column="5" Name="PopupButton" Content="⫘" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="PopupButton_Click"
                        ToolTip="在新标签页打开"/>
                <!-- 缩小按钮 -->
                <Button Grid.Column="7" Name="ZoomOutButton" Content="-" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="ZoomOut_Click"
                        ToolTip="缩小"/>
                <!-- 放大按钮 -->
                <Button Grid.Column="8" Name="ZoomInButton" Content="+" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="ZoomIn_Click"
                        ToolTip="放大"/>
                
                <!-- 日夜模式切换按钮 -->
                <Button Grid.Column="4" Name="DarkModeButton" Content="☾" 
                        Style="{StaticResource ToolbarButtonStyle}" Click="DarkModeButton_Click"
                        ToolTip="切换暗色模式"/>

                <!-- 汉堡菜单按钮 -->
                <Label Grid.Column="10" Name="HamburgerMenu" 
                       Background="Transparent" Foreground="#FFFFFF"
                       Margin="5" 
                       Content="☰"
                       Cursor="Hand"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"/>

            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>